@model StudentManagement_MVC.Models.StuddentManagement_database.Student;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;


<div class="container">
    <h1>Add Student</h1>
    <script>

    </script>
    <form asp-action="GenStuID" asp-controller="Student" method="post">
        <div>
            <label for="StuId" class="form-label">Student ID</label>
            <input asp-for="StuId" type="text" class="form-control" readonly required />
            <button type="submit" class="btn btn-secondary">Generate ID</button>
        </div>
    </form>


    <form asp-action="AddStudent" asp-asp-controller="Student" method="post">
        <div>
            <label for="Fullname" class="form-label">Full Name</label>
            <input asp-for="Fullname" type="text" class="form-control" required />
        </div>
        <div>
            <label for="DoB" class="form-label">Date of Birth</label>
            <input asp-for="DoB" type="text" class="form-control" required />
        </div>
        <div>
            <label for="Sex" class="form-label">Sex</label>
            <input asp-for="Sex" type="text" class="form-control" />
        </div>
        <div>
            <label for="Class" class="form-label">Class</label>
            <input asp-for="Class" type="text" class="form-control" />
        </div>
        <div>
            <label for="Address" class="form-label">Address</label>
            <input asp-for="Address" type="text" class="form-control" />
        </div>
        <div>
            <label for="ParentPhone" class="form-label">ParentPhone</label>
            <input asp-for="ParentPhone" type="text" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add Student</button>
        <a class="btn btn-secondary" asp-action="Index" asp-asp-controller="Student">Back to list</a>
    </form>
</div>
