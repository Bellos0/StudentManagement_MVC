@model IEnumerable<StudentManagement_MVC.Models.StuddentManagement_database.Subject>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
<div>
    <h1> Subject List</h1>

    <div>
        <table>
            <thead>
                <tr>
                    <th> Subject ID</th>
                    <th>Subject Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SubId</td>
                        <td>@item.Subname</td>
                        @* chuc nang xoa bi ngan chan boi entity framework va sql server do dang co contraint foreign key *@
                        @* <td>
                            <a asp-action="DelSubByID" asp-controller="Subject" asp-route-SubId="@item.SubId">Deleted</a>

                        </td> *@
                    </tr>
                }
            </tbody>
            <a asp-action="AddSub" asp-controller="Subject" class="btn btn-primary" class="btn btn-primary">Add Subject</a>
        </table>
    </div>
</div>

